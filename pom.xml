    <developerConnection>scm:git:ssh://github.com:DiceTechnology/dice-where.git</developerConnection>
    <url>http://github.com/DiceTechnology/dice-where/tree/master</url>
  </scm>

  <licenses>
    <license>
      <name>TODO License name</name>
      <url>TODO License URL</url>
